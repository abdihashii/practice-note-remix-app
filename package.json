{
  "name": "notes-app",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "bun run clean:workspaces",
    "clean:workspaces": "bun ./scripts/clean-workspaces.ts",
    "clean:install": "bun run clean:workspaces && bun install",
    "clean:server": "bun run --cwd apps/server clean",
    "clean:client": "bun run --cwd apps/client clean",
    "clean:types": "bun run --cwd packages/types clean",
    "postgres:up": "bun run --cwd apps/server postgres:up",
    "postgres:down": "bun run --cwd apps/server postgres:down",
    "dev": "bun run --cwd apps/server dev & bun run --cwd apps/client dev",
    "dev:client": "bun run --cwd apps/client dev",
    "dev:server": "bun run --cwd apps/server dev",
    "build:client": "bun run --cwd apps/client build",
    "build:server": "bun run --cwd apps/server build",
    "build:types": "bun run --cwd packages/types build",
    "start:client": "bun run --cwd apps/client start",
    "start:server": "bun run --cwd apps/server start",
    "docker:copy-env": "cp apps/server/.env .",
    "docker:up": "bun run docker:copy-env && cd docker && docker compose up -d && cd ..",
    "docker:down": "cd docker && docker compose down && cd .. && rm -f .env",
    "docker:logs": "cd docker && docker compose logs -f",
    "setup": "chmod +x scripts/startup.sh && ./scripts/startup.sh",
    "postinstall": "chmod +x scripts/startup.sh"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
