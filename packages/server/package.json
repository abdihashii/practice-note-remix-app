{
  "name": "@notes-app/server",
  "private": true,
  "scripts": {
    "start": "bun run db:migrate && bun run db:push && bun run src/main.ts",
    "dev": "bun run db:migrate && bun run db:push && bun --watch src/main.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@notes-app/types": "workspace:*",
    "@hono/node-server": "^1.13.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "hono": "^4.6.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.25.0"
  },
  "npmrc": ".npmrc"
}
