{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": false,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true, // For better type safety
    "skipLibCheck": true, // Skip type checking for external libraries for faster build times
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Type declarations
    "types": ["./types.d.ts"],

    // Set base directory for resolving non-relative imports.
    "baseUrl": "./",

    // Define alias for cleaner imports
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
