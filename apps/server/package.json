{
  "name": "server",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules",
    "start": "bun run db:migrate && bun run db:push && bun run src/main.ts",
    "dev": "bun run db:migrate && bun run db:push && bun --watch src/main.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:seed": "psql $DATABASE_URL -f drizzle/seed.sql",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "postgres:up": "docker compose up postgres -d",
    "postgres:down": "docker compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "drizzle-seed": "^0.1.3",
    "hono": "^4.6.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.25.0",
    "bun-types": "latest"
  }
}
