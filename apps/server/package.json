{
  "name": "server",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules",
    "build": "bun build ./src/main.ts --target bun --outdir dist",
    "start": "bun run db:migrate && bun run src/main.ts",
    "dev": "bun run db:migrate && bun run db:push && bun --watch src/main.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "docker:up": "bun run --cwd ../.. docker:up",
    "docker:down": "bun run --cwd ../.. docker:down",
    "docker:logs": "bun run --cwd ../.. docker:logs",
    "postgres:up": "docker compose -f ../../docker/docker-compose.yml up postgres -d",
    "postgres:down": "docker compose -f ../../docker/docker-compose.yml down"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "hono": "^4.6.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.25.0",
    "bun-types": "latest"
  }
}
